{
  "manifest_version": 2,

  "name": "Nyan Cat Jenkins Progress",
  "description": "A Chrome plugin for replacing cruddy Jenkins progress bars with sick Nyan Cats!",
  "version": "0.2.1",

  "browser_action": {
    "name": "Nyan Cat Jenkins",
    "default_icon": {
      "19": "assets/images/icon_19.png",
      "24": "assets/images/icon_24.png",
      "32": "assets/images/icon_32.png",
      "38": "assets/images/icon_38.png",
      "128": "assets/images/icon_128.png",
      "384": "assets/images/icon_384.png"
    },
    "default_title": "Nyan, nyan, nyan!"
  },

  "icons": {
    "19": "assets/images/icon_19.png",
    "24": "assets/images/icon_24.png",
    "32": "assets/images/icon_32.png",
    "38": "assets/images/icon_38.png",
    "128": "assets/images/icon_128.png",
    "384": "assets/images/icon_384.png"
  },

  "content_scripts": [
    {
      "css": [ "assets/css/nyan-jenkins.css" ],
      "matches": [
        "https://ci.ops.powershop.com/*"
      ]
    }
  ],

  "web_accessible_resources": [
    "assets/images/*"
  ]
}